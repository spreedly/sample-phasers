<div class="container">
  <div class="page-header">
    <h1>Buy Phasers</h1>
    <h2>
      <small>For only 2 cents a piece!</small>
    </h2>

  </div>

  <%= error_messages_for 'credit_card', :object_name => "credit card" %>
  <%= form_for @credit_card, :as => :credit_card, :url => SpreedlyCore.add_payment_method_url do |f| %>
    <%= render 'phasers/hidden_form_fields' %>
    <%= render 'phasers/payment_form_fields', :f => f %>

    <br/>
    <button type="submit" class="btn btn-primary">Purchase</button>

  <% end %>

  <br/>
  <br/>
  <div>
    <p>
      * This is hooked up to a Spreedly Core Test gateway and does not use real money.
      <br/>
      &nbsp; This gateway accepts a <%= link_to 'number of test cards', 'https://spreedlycore.com/manual/test-data' %>.  Here are a few examples:
    </p>
    <table class="table span6">
      <tr>
        <th>Card Type</th>
        <th>Good Card</th>
        <th>Declined/Failed Card</th>
      </tr>
      <td>Visa</td>
      <td>4111111111111111</td>
      <td>4012888888881881</td>
      <tr>
        <td>MasterCard</td>
        <td>5555555555554444</td>
        <td>5105105105105100</td>
      </tr>
    </table>

  </div>
</div>
